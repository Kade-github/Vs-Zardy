			remove(credGroup);

			remove(splash);

			FlxTween.tween(logoBl,{y: -100}, 1.4, {ease: FlxEase.expoInOut});

			logoBl.angle = -4;

			new FlxTimer().start(0.01, function(tmr:FlxTimer)
				{
